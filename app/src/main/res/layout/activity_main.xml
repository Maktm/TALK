<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mainActivityHappyBtn"
        android:layout_width="224dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/main_activity_happy_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityAngryBtn" />

    <ImageView
        android:id="@+id/mainActivityAngryBtn"
        android:layout_width="224dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/main_activity_angry_btn"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityHappyBtn"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityHappyBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mainActivityHappyBtn"
        app:layout_constraintTop_toBottomOf="@+id/mainActivityAnxiousBtn" />

    <ImageView
        android:id="@+id/mainActivitySadBtn"
        android:layout_width="224dp"
        android:layout_height="67dp"
        android:layout_marginTop="324dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/main_activity_sad_btn"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityAnxiousBtn"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityAnxiousBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/mainActivityAnxiousBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainActivityAnxiousBtn"
        android:layout_width="224dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/main_activity_anxious_btn"
        app:layout_constraintBottom_toTopOf="@+id/mainActivityAngryBtn"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityAngryBtn"
        app:layout_constraintStart_toStartOf="@+id/mainActivityAngryBtn"
        app:layout_constraintTop_toBottomOf="@+id/mainActivitySadBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>